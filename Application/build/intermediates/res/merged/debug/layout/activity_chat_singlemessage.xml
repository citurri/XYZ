<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:contentPaddingLeft="5dp"
>

    <RelativeLayout
        android:id="@+id/singleMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/redactor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="60dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Empresa 1"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singleMessage"
            android:layout_width="258dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/redactor"
            android:layout_below="@+id/redactor"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="20dp"
            android:text="Texto del Mensaje"
            android:textColor="@android:color/primary_text_light"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/imageUser"
            android:contentDescription="image_user"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/singleMessage"
            android:layout_alignBottom="@+id/date_message"
            android:layout_gravity="top"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/date_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="10dp"
            android:text="fecha del mensaje"
            android:textColor="@android:color/primary_text_light"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:gravity="right"
            android:layout_below="@+id/singleMessage"
            android:layout_alignStart="@+id/singleMessage"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>