<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    custom:rowCount="4"
    custom:columnCount="3"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        custom:auto_cycle="true"
        custom:indicator_visibility="visible"
        custom:layout_column="0"
        custom:layout_columnSpan="3"
        custom:layout_columnWeight="1"
        custom:layout_row="0"
        custom:layout_rowSpan="2"
        custom:layout_rowWeight="10"
        custom:pager_animation="Accordion"
        custom:pager_animation_span="1100" />

    <LinearLayout
        android:id="@+id/layout_ofertas"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_layout"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        custom:layout_column="1"
        custom:layout_columnWeight="333"
        custom:layout_row="3"
        custom:layout_rowWeight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:columnCount="1"
            custom:rowCount="2">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="0"
                custom:layout_rowWeight="1"
                custom:srcCompat="@drawable/ic_store" />

            <TextView
                android:id="@+id/custom_switcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Lista de\r\nOfertas"
                android:textAlignment="center"
                android:textAllCaps="false"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="1"
                custom:layout_rowWeight="3" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_usuario"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_layout_user"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        custom:layout_column="0"
        custom:layout_columnSpan="3"
        custom:layout_columnWeight="1"
        custom:layout_row="2"
        custom:layout_rowSpan="1"
        custom:layout_rowWeight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:columnCount="2"
            custom:rowCount="1">

            <ImageView
                android:id="@+id/image_user"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_marginLeft="15dp"
                custom:layout_column="0"
                custom:layout_columnWeight="0"
                custom:layout_row="0"
                custom:layout_rowWeight="1" />

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                android:gravity="top|center_vertical|center"
                custom:layout_column="1"
                custom:layout_row="0"
                custom:layout_rowWeight="1" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_noticas"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_layout_noticias"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        custom:layout_column="2"
        custom:layout_columnWeight="333"
        custom:layout_row="3"
        custom:layout_rowWeight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:columnCount="1"
            custom:rowCount="2">

            <ImageView
                android:id="@+id/imageNoticias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="0"
                custom:layout_rowWeight="1"
                custom:srcCompat="@drawable/ic_news" />

            <TextView
                android:id="@+id/custom_switcher_noticias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Lista de\r\nNoticias"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="1"
                custom:layout_rowWeight="3" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_empresa"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/corner_layout_empresa"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        custom:layout_column="0"
        custom:layout_columnWeight="180"
        custom:layout_row="3"
        custom:layout_rowWeight="1">

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:columnCount="1"
            custom:rowCount="2">

            <ImageView
                android:id="@+id/imageEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="15dp"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="0"
                custom:layout_rowWeight="1"
                custom:srcCompat="@drawable/ic_building" />

            <TextView
                android:id="@+id/text_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Directorio\r\nde Empresas"
                custom:layout_column="0"
                custom:layout_columnWeight="1"
                custom:layout_row="1"
                custom:layout_rowWeight="3" />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>



</android.support.v7.widget.GridLayout>