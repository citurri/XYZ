<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/ciudad_todos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="10dp"
        android:background="@drawable/corner_layout_country"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/todos_text"
            style="?android:textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:maxLines="1"

            android:paddingBottom="15dp"

            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:transitionName="image"
            tools:text="Listar todos" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/arrow"

            android:padding="10dp"
            android:src="@drawable/arrow" />

    </RelativeLayout>


    <TextView
        android:id="@+id/text3"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="#FF22A4D4"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:paddingStart="10dp"
        android:text="@string/user_location"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:visibility="visible"
        tools:text="Usted se encuentra en:" />

    <RelativeLayout
        android:id="@+id/ciudad_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="10dp"
        android:background="@drawable/corner_layout_country"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/ciudad_text"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/imageView3"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="@dimen/tiny_margin"
            android:textSize="18sp"
            tools:text="Ciudad" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/arrow"
            android:padding="10dp"
            android:src="@drawable/arrow" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text4"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ciudad_text"
        android:layout_marginTop="5dp"
        android:background="#FF22A4D4"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="4dp"
        android:paddingStart="10dp"
        android:text="@string/country_select"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:visibility="visible"
        tools:text="Seleccione otra ciudad para consultar:" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          android:id="@+id/container_ciudades"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          tools:context=".MainActivity">

    </FrameLayout>


</LinearLayout>