<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ciudad_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="10dp"
        android:background="@drawable/corner_layout_country"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:padding="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/contacto_imagen"
                android:transitionName="image" />

            <TextView
                android:id="@+id/denoTextView"
                style="?android:textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView5"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="3dp"
                android:paddingEnd="35dp"
                android:paddingStart="5dp"
                android:textStyle="bold"
                android:transitionName="image"
                tools:text="Contacto Nombre" />

            <TextView
                android:id="@+id/textID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView5"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="1dp"
                android:paddingStart="10dp"
                android:textAlignment="center"
                android:textIsSelectable="false"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="" />

            <TextView
                android:id="@+id/telTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dirTextView"
                android:layout_toEndOf="@+id/imageView5"
                android:maxLines="1"
                android:padding="1dp"
                android:paddingRight="5dp"
                android:paddingStart="5dp"
                android:text="Telefonos"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dirTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/denoTextView"
                android:layout_toEndOf="@+id/imageView5"
                android:maxLines="1"
                android:padding="1dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Direccion"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/telTextView"

                android:layout_toEndOf="@+id/imageView5"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="1dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Categoria"
                android:textAlignment="textStart"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:visibility="visible"
                tools:text="Categoria" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>